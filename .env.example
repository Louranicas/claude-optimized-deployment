# Environment configuration for CODE project MCP servers
# Copy this file to .env and configure your API keys and settings

# ==============================================
# Core MCP Server Configuration
# ==============================================

# Brave Search API (for web search capabilities)
BRAVE_API_KEY=your_brave_search_api_key_here
# Get your free API key at: https://api.search.brave.com/

# ==============================================
# Infrastructure & Cloud Configuration
# ==============================================

# AWS Configuration (for S3 storage and infrastructure)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# Azure DevOps Configuration
AZURE_DEVOPS_ORGANIZATION=your_organization_name
AZURE_DEVOPS_TOKEN=your_personal_access_token
AZURE_DEVOPS_PROJECT=your_project_name

# ==============================================
# Monitoring & Observability
# ==============================================

# Prometheus Configuration
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_USERNAME=
PROMETHEUS_PASSWORD=

# Grafana Configuration (optional)
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_grafana_api_key

# ==============================================
# Communication & Notifications
# ==============================================

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_TEAM_ID=your_team_id
SLACK_DEFAULT_CHANNEL=#general

# Discord Webhooks (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url

# Email Configuration (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ==============================================
# Security & Compliance
# ==============================================

# Security Scanner Configuration
SECURITY_SCAN_LEVEL=moderate
VULNERABILITY_THRESHOLD=high

# Secret Management
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your_vault_token

# ==============================================
# Database Configuration
# ==============================================

# PostgreSQL (for application data)
DATABASE_URL=postgresql://user:password@localhost:5432/code_db

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# ==============================================
# Development & Testing
# ==============================================

# Environment Mode
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Testing Configuration
TEST_MODE=false
MOCK_EXTERNAL_APIS=false

# ==============================================
# Circle of Experts Configuration
# ==============================================

# AI Provider API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key
GOOGLE_API_KEY=your_google_api_key
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key

# Google Drive Integration
GOOGLE_CREDENTIALS_PATH=/path/to/google-credentials.json

# Local AI Models (Ollama)
OLLAMA_BASE_URL=http://localhost:11434

# ==============================================
# Performance & Optimization
# ==============================================

# Rust Performance Modules
RUST_ENABLE_OPTIMIZATIONS=true
RUST_LOG=info

# Parallel Processing
MAX_CONCURRENT_OPERATIONS=10
ASYNC_TIMEOUT_SECONDS=300

# ==============================================
# Container & Orchestration
# ==============================================

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_REGISTRY=ghcr.io/your-username

# Kubernetes Configuration
KUBECONFIG=/path/to/kubeconfig
KUBERNETES_NAMESPACE=default

# ==============================================
# Backup & Storage
# ==============================================

# S3 Backup Configuration
BACKUP_BUCKET=your-backup-bucket
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=daily

# File Storage
STORAGE_BACKEND=s3
TEMP_DIRECTORY=/tmp/code_temp
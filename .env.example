# Claude-Optimized Deployment Engine - Environment Configuration
# Copy this file to .env and fill in your values

# AI Provider API Keys (at least one required for Circle of Experts)
ANTHROPIC_API_KEY=your-anthropic-key-here
OPENAI_API_KEY=your-openai-key-here
GOOGLE_GEMINI_API_KEY=your-gemini-key-here
DEEPSEEK_API_KEY=your-deepseek-key-here
OPENROUTER_API_KEY=your-openrouter-key-here

# Google Drive Integration (for query storage)
GOOGLE_CREDENTIALS_PATH=/path/to/credentials.json

# MCP Server Authentication
BRAVE_API_KEY=your-brave-api-key
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
AZURE_DEVOPS_TOKEN=your-azure-devops-token
AZURE_DEVOPS_ORGANIZATION=your-azure-org

# Local AI (optional)
OLLAMA_BASE_URL=http://localhost:11434

# Monitoring (optional)
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# Environment Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# Security Settings
SECURITY_SCAN_LEVEL=moderate
VULNERABILITY_THRESHOLD=high

# Performance Settings
MAX_WORKERS=4
ENABLE_RUST_ACCELERATION=true
CACHE_TTL=3600

# Node.js Memory Configuration
NODE_OPTIONS=--max-old-space-size=6144 --gc-interval=100 --optimize-for-size
NODE_HEAP_SIZE_MB=6144
GC_INTERVAL=100
OPTIMIZE_FOR_SIZE=true

# Kubernetes (optional)
KUBECONFIG=/path/to/kubeconfig

# Docker (optional)
DOCKER_HOST=unix:///var/run/docker.sock

# Docker Compose Passwords
# Monitoring Stack (docker-compose.monitoring.yml)
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password

# Logging Stack (infrastructure/logging/docker-compose.logging.yml)
ELASTIC_PASSWORD=your-secure-elastic-password
# Production Environment Configuration
# IMPORTANT: Update all placeholder values before deployment

# Core Configuration
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# Node.js Memory Configuration (Critical for preventing heap exhaustion)
NODE_OPTIONS=--max-old-space-size=6144 --gc-interval=100 --optimize-for-size
NODE_HEAP_SIZE_MB=6144
GC_INTERVAL=100
OPTIMIZE_FOR_SIZE=true

# Database Configuration
DATABASE_URL=postgresql://user:password@db-host:5432/production_db

# Security Settings (CRITICAL: Change these in production)
JWT_SECRET_KEY=CHANGE-THIS-IN-PRODUCTION-MINIMUM-256-BITS
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security Configuration
SECURITY_SCAN_LEVEL=strict
VULNERABILITY_THRESHOLD=medium
ENABLE_RATE_LIMITING=true
ENABLE_CORS_PROTECTION=true

# AI Provider Keys (Required for production)
ANTHROPIC_API_KEY=your-production-anthropic-key
OPENAI_API_KEY=your-production-openai-key
GOOGLE_GEMINI_API_KEY=your-production-gemini-key
DEEPSEEK_API_KEY=your-production-deepseek-key
OPENROUTER_API_KEY=your-production-openrouter-key

# Infrastructure Services
REDIS_URL=redis://redis-host:6379/0
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000

# Performance Settings
MAX_WORKERS=8
ENABLE_RUST_ACCELERATION=true
CACHE_TTL=7200

# Production Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_PROFILING=false
METRICS_PORT=8000

# MCP Server Configuration
MCP_ENABLED=true
MCP_LOG_LEVEL=INFO
MCP_AUTH_REQUIRED=true

# Container Memory Limits (for orchestration)
CONTAINER_MEMORY_LIMIT=8G
CONTAINER_CPU_LIMIT=4000m

# Kubernetes Configuration
K8S_NAMESPACE=claude-deployment
K8S_MEMORY_REQUEST=2Gi
K8S_MEMORY_LIMIT=8Gi
K8S_CPU_REQUEST=500m
K8S_CPU_LIMIT=2000m
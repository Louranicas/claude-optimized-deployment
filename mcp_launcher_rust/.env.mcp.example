# MCP Server Launcher Environment Configuration
# Copy this file to .env.mcp and configure your API keys

# GitHub Integration
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=

# Brave Search API
# Get from: https://api.search.brave.com/
BRAVE_API_KEY=

# Google Maps API
# Get from: https://console.cloud.google.com/
GOOGLE_MAPS_API_KEY=

# Smithery API (for package search)
# Example key provided in CLAUDE.md
SMITHERY_API_KEY=d2bddad0-4155-4fdf-97a1-298122fecf7b

# OpenAI API (optional)
OPENAI_API_KEY=

# Anthropic API (optional)
ANTHROPIC_API_KEY=

# Server Configuration
MCP_SERVER_HOST=localhost
MCP_LOG_LEVEL=info
MCP_HEALTH_CHECK_INTERVAL=30
MCP_MAX_RESTARTS=3

# File paths
MCP_DATA_DIR=./data
MCP_LOG_DIR=./logs
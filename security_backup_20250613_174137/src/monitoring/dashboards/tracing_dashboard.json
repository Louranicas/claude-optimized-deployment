{
  "dashboard": {
    "id": null,
    "title": "OpenTelemetry Distributed Tracing Dashboard",
    "tags": ["opentelemetry", "tracing", "performance"],
    "timezone": "utc",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate by Service",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(traces_total[5m])",
            "legendFormat": "{{service_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "decimals": 2
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "P95 Latency by Operation",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(span_duration_bucket[5m]))",
            "legendFormat": "{{operation_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "decimals": 1
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Error Rate by Service",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(spans_total{status_code=\"ERROR\"}[5m]) / rate(spans_total[5m])",
            "legendFormat": "{{service_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "decimals": 2,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.01},
                {"color": "red", "value": 0.05}
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "SLO Compliance",
        "type": "stat",
        "targets": [
          {
            "expr": "slo_compliance_ratio",
            "legendFormat": "{{sli_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "decimals": 2,
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.90},
                {"color": "green", "value": 0.95}
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Trace Volume by Service",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(traces_received_total[5m])",
            "legendFormat": "{{service_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "tps",
            "decimals": 1
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Sampling Rate by Service",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sampling_rate",
            "legendFormat": "{{service_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "decimals": 3
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "Top Slowest Operations",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, avg_over_time(span_duration[1h]))",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 8,
        "title": "Business Metrics by Tenant",
        "type": "timeseries",
        "targets": [
          {
            "expr": "business_value_total by (tenant_id)",
            "legendFormat": "{{tenant_id}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        }
      },
      {
        "id": 9,
        "title": "Trace Export Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(trace_export_success_total[5m]) / rate(trace_export_attempts_total[5m])",
            "legendFormat": "{{exporter}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "decimals": 2,
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.95},
                {"color": "green", "value": 0.99}
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 32
        }
      },
      {
        "id": 10,
        "title": "Active Alerts",
        "type": "table",
        "targets": [
          {
            "expr": "trace_alerts_active",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 32
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 30
  }
}
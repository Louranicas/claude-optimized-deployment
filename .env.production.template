# Production Environment Configuration Template
# IMPORTANT: Update all placeholder values before deployment

# Core Configuration
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# Node.js Memory Configuration (Critical for preventing heap exhaustion)
NODE_OPTIONS=--max-old-space-size=6144 --gc-interval=100 --optimize-for-size
NODE_HEAP_SIZE_MB=6144
GC_INTERVAL=100
OPTIMIZE_FOR_SIZE=true

# Database Configuration (UPDATE WITH ACTUAL VALUES)
DATABASE_URL=postgresql://YOUR_DB_USER:YOUR_DB_PASSWORD@YOUR_DB_HOST:5432/YOUR_DB_NAME

# Security Settings (CRITICAL: Generate new secure values)
JWT_SECRET_KEY=YOUR_SECURE_JWT_SECRET_KEY_MINIMUM_256_BITS
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security Configuration
SECURITY_SCAN_LEVEL=strict
VULNERABILITY_THRESHOLD=medium
ENABLE_RATE_LIMITING=true
ENABLE_CORS_PROTECTION=true

# AI Provider Keys (Required for production - ADD YOUR KEYS)
ANTHROPIC_API_KEY=YOUR_PRODUCTION_ANTHROPIC_KEY
OPENAI_API_KEY=YOUR_PRODUCTION_OPENAI_KEY
GOOGLE_GEMINI_API_KEY=YOUR_PRODUCTION_GEMINI_KEY
DEEPSEEK_API_KEY=YOUR_PRODUCTION_DEEPSEEK_KEY
OPENROUTER_API_KEY=YOUR_PRODUCTION_OPENROUTER_KEY

# Infrastructure Services (UPDATE WITH ACTUAL HOSTS)
REDIS_URL=redis://YOUR_REDIS_HOST:6379/0
PROMETHEUS_URL=http://YOUR_PROMETHEUS_HOST:9090
GRAFANA_URL=http://YOUR_GRAFANA_HOST:3000

# Performance Settings
MAX_WORKERS=8
ENABLE_RUST_ACCELERATION=true
CACHE_TTL=7200

# Production Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_PROFILING=false
METRICS_PORT=8000

# MCP Server Configuration
MCP_ENABLED=true
MCP_LOG_LEVEL=INFO
MCP_AUTH_REQUIRED=true

# Container Memory Limits (for orchestration)
CONTAINER_MEMORY_LIMIT=8G
CONTAINER_CPU_LIMIT=4000m

# Kubernetes Configuration
K8S_NAMESPACE=claude-deployment
K8S_MEMORY_REQUEST=2Gi
K8S_MEMORY_LIMIT=8Gi
K8S_CPU_REQUEST=500m
K8S_CPU_LIMIT=2000m